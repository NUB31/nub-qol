{
  "schemaVersion": 1,
  "id": "nub-qol",
  "version": "${version}",
  "name": "NUB QoL Mods",
  "description": "Small quality of life changes to make vanilla minecraft a little better",
  "authors": [
    "NUB31"
  ],
  "contact": {
    "homepage": "https://oliste.no/",
    "sources": "https://github.com/nub31/nub-qol"
  },
  "license": "MIT",
  "icon": "assets/nub-qol/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.nubqol.NubQol"
    ],
    "client": [
      "com.nubqol.NubQolClient"
    ],
    "modmenu": [
      "com.nubqol.config.ModMenu"
    ]
  },
  "mixins": [
    "nub-qol.mixins.json",
    {
      "config": "nub-qol.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.15.11",
    "nub-lib": ">=1.0.3",
    "minecraft": "1.20.6",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {
    "modmenu": ">=10.0.0-beta.1"
  }
}